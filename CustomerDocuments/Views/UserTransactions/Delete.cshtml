@model CustomerDocuments.Models.UserTransaction

@{
    ViewData["Title"] = "Delete";
    Layout = "~/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>User Transaction</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            User ID
        </dt>
        <dd class="col-sm-10">
            @Model.UserId
        </dd>
        <dt class="col-sm-2">
            Document ID
        </dt>
        <dd class="col-sm-10">
            @Model.DocumentId
        </dd>
        <dt class="col-sm-2">
            Transaction Date
        </dt>
        <dd class="col-sm-10">
            @Model.TransactionDate
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="UserTransactionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
